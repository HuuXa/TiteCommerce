@model LiteCommerce.Admin.Models.EmployeePaginationResult
@{
    ViewBag.Title = "Manage c";
    int i = 0;
}


<div class="box box-primary">

    <!-- /.box-header -->
    <!-- form start -->

    <div class="box-body">
        <form action="~/Emplogesx method="get">
            <div class="input-group input-group-sm">
                <input type="text" name="searchValue" class="form-control" placeholder="Input search value..." >
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
    <!-- /.box-body -->
</div>
<div class="container-fluid row" style="padding-bottom:10px">
    <div class="col-sm-8">
        there are <b>@Model.RowCount</b>  Emploges. Page @Model.Page/@Model.PageCount
    </div>
    <div class="col-sm-4 text-right">
        <div class="btn-group">
            <a href="~/Emploges/Input" class="btn btn-sm btn-primary">Add Emploges</a>
            <button type="button" class="btn btn-sm btn-danger">Delete Emploges</button>

        </div>
    </div>
</div>
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th >
                        <input type="checkbox" />
                    </th>
                    <th>
                        #
                    </th>
                    <th >
                       Full Name
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Birth Date - Hire Date
                    </th>
                    <th style="width: 30px">
                        Email
                    <th>
                        Address
                    </th>
                    <th>
                        Country - City - Home Phone
                    </th>
                    <th>
                        Notes
                    </th>
                    <th>
                        Photo Path
                    </th>
                    <th>
                        Pass Word
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>@(++i)</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.Title</td>
                        <td>@item.BirthDate - @item.HireDate</td>
                        <td>@item.Email</td>
                        <td>@item.Address <span>@item.HomePhone</span></td>
                        <td>@item.Country-@item.City</td>
                        <td>@item.Notes</td>
                        <td>@item.PhotoPath</td>
                        <td>@item.Password</td>
                        <td class="text-right">

                            <a class="btn btn-sm btn-default" href="~/Emploges/Input/@i">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>}

            </tbody>
        </table>
    </div>
    <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-right">
            <li><a href="~/Emploges?page=1&searchValue=@Model.SearchValue">«</a></li>
            @for (int page = 1; page <= Model.PageCount; page++)
            {
                <li><a href="~/Emploges?page=@page&searchValue=@Model.SearchValue">@page</a></li>
            }
            <li><a href="~/Emploges?page=@Model.PageCount&searchValue=@Model.SearchValue">»</a></li>
        </ul>
    </div>
</div>

