
@{
    ViewBag.Title = "Edit Profile";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h5 class="box-title pull-right">
            <a href="~/Account">
                Back
            </a>
        </h5>
    </div>
    <img class="profile-user-img img-responsive img-circle" src="~/Themes/AdminLTE/dist/img/76967065_582866618922221_692346855509458944_n.jpg" alt="User profile picture">
    <form class="form-horizontal">
        <div>
            <a class="btn btn-app" style="min-width:20px; min-height:0px; left:520px; padding:0px; height:35px">
                <i class="fa fa-fw fa-picture-o" style="font-size:20px"></i> Edit
            </a>
        </div>
        
        <div class="box-body" style="width:950px; margin:auto auto;font-size:20px">
            <div class="form-group " style="margin:10px 280px;width:800px;">
                <label class="col-sm-2">Username:</label>

                <input type="text" class="form-control" id="inputSuccess" style="width:400px" placeholder="Username ...">

            </div>
            <div class="form-group " style="margin:10px 280px;width:800px;">
                <label class="col-sm-2">Full Name:</label>
                <input type="text" class="form-control" id="inputSuccess" style="width:400px" placeholder="Full Name ...">
            </div>
            <div class="form-group " style="margin:10px 280px;width:800px;">
                <label class="col-sm-2">Email:</label>
                <input type="text" class="form-control" id="inputSuccess" style="width:400px" placeholder="Email ...">
            </div>
            <div class="form-group " style="margin:10px 280px;width:800px;">
                <label class="col-sm-2">Phone:</label>
                <input type="text" class="form-control" id="inputSuccess" style="width:400px" placeholder="Phone ...">
            </div>
            <div class="form-group " style="margin:10px 280px;width:800px;">
                <label class="col-sm-2">Address:</label>
                <input type="text" class="form-control" id="inputSuccess" style="width:400px" placeholder="Address ...">
            </div>
            <div style="display:flex; width:300px">
                <button style="margin:10px 380px;width:60px;" type="submit" class="btn btn-default pull-left">Save</button>
                <button style="margin:10px 380px;width:60px;" type="submit" class="btn btn-default pull-left">Cancel</button>
            </div>
        </div>
        <!-- /.box-body -->
        <!-- /.box-footer -->
  
    </form>
</div>



