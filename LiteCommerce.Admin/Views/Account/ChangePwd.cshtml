
@{
    ViewBag.Title = "Change Password";
}


<div class="box box-primary" style="width:1099px; position:absolute; display:flex; justify-content:center">

    <form class="form-horizontal">

        <div class="box-body" style="width:499px;">
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Current</label>

                <div class="col-sm-10">
                    <input type="password" class="form-control" id="" placeholder="Current">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">New</label>

                <div class="col-sm-10">
                    <input type="password" class="form-control" id="" placeholder="New">
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Re-type</label>

                <div class="col-sm-10">
                    <input type="email" class="form-control" id="" placeholder="Re-type">
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="~/dashboard/" type="submit" class="btn btn-default">Cancel</a>
            <button type="submit" class="btn btn-info pull-right">Sign in</button>
        </div>
        <!-- /.box-footer -->
    </form>

</div>