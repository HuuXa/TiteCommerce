@model LiteCommerce.DomainModels.Employee



<div class="box box-primary">
    <div class="box-body">
        <div class="box-header with-border">
            <h2>@ViewBag.Title</h2>
        </div>
        <!-- form start -->
        <form role="form" action="~/Account/EditAccount" method="post">
            <div class="box-body">
                <div class="form-group-lg">
                    <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
                    <div class="col-sm-2">
                        <label for="image" style="width: 100%; cursor: pointer" title="Click vào đây để đổi ảnh (Kích thước 128KB)">
                            <img src="~/Images/@Model.PhotoPath" class="img-thumbnail _avatar" style="width:100%; height:150px;" alt="Alternate Text" />
                        </label>
                        <input type="file" style="display: none" name="fileImage" value="" id="image" accept="image/x-png, image/gif, image/jpeg" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">Last Name</label>
                        <input type="text" class="form-control" id="" placeholder="Enter Last name" name="LastName" value="@Model.LastName">
                        <span class="field-validation-valid" data-valmsg-for="ContactName" data-valmsg-replace="true" style="color : red;"></span>
                    </div>
                    <div class="col-lg-6">
                        <label for="">First Name</label>
                        <input type="text" class="form-control" id="" placeholder="Enter first name" name="FirstName" value="@Model.FirstName">
                        <span class="field-validation-valid" data-valmsg-for="CompanyName" data-valmsg-replace="true" style="color : red;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">Title</label>
                        <input type="text" class="form-control" id="" placeholder="Enter contact name" name="Title" value="@Model.Title">
                        <span class="field-validation-valid" data-valmsg-for="ContactName" data-valmsg-replace="true" style="color : red;"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="">BirthDate(MM/dd/yyyy):</label>
                        <input required name="BirthDate" value="@String.Format("{0:MM/dd/yyyy 00:00:00}", Model.BirthDate)" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="">Address</label>
                    <input type="text" class="form-control" id="" placeholder="Enter address" name="Address" value="@Model.Address">
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">Country</label>
                        <select class="form-control" name="Country">
                            @foreach (var item in SelectListHelper.Countries())
                            {
                                if (item.Value == Model.Country)
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="">City</label>
                        <input type="text" class="form-control" id="" placeholder="Enter City" name="City" value="@Model.City">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="">HomePhone</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <input type="tel" class="form-control" data-inputmask="'mask': ['999-999-9999 [x99999]', '+099 99 99 9999[9]-9999']" data-mask="" name="HomePhone" value="@Model.HomePhone">
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="Phone" data-valmsg-replace="true" style="color : red;"></span>
                    </div>

                    <div>
                        <span class="field-validation-valid" data-valmsg-for="" data-valmsg-replace="true" style="color : red;"></span>
                    </div>
                </div>
                <!-- /.box-body -->
                @Html.ValidationMessage("", new { @style = "color : red;" })
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="~/Account" class="btn btn-default">Cancer</a>
                </div>
            </div>
        </form>
    </div>
</div>
