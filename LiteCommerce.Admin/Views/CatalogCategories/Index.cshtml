@model LiteCommerce.Admin.Models.CategoriePaginationResult
@{
    ViewBag.Title = "Manage Categories";
    int i = 0;
}
<div class="box box-primary">

    <!-- /.box-header -->
    <!-- form start -->

    <div class="box-body">
        <form action="~/catalogcategories" method="get">
            <div class="input-group input-group-sm">
                <input type="text" name="searchValue" class="form-control" placeholder="Input search value...">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
    <!-- /.box-body -->
</div>
<div class="container-fluid row" style="padding-bottom:10px">
    <div class="col-sm-8">
        there are <b>@Model.RowCount</b>  Categories. Page @Model.Page/@Model.PageCount
    </div>
    <div class="col-sm-4 text-right">
        <div class="btn-group">
            <a href="~/catalogcategories/Input" class="btn btn-sm btn-primary">Add Categories </a>
            <button type="button" class="btn btn-sm btn-danger">Delete Categories</button>

        </div>
    </div>
</div>
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered table-striped dataTable">
            <thead>
                <tr>
                    <th style="width:30px">
                        <input type="checkbox" />
                    </th>
                    <th style="width:50px">
                        #
                    </th>
                    <th style="width:250px">
                        Compay Name
                    </th>
                    <th style="width:300px">
                        Description
                    </th>
                    <th style="width:80px">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>@(++i)</td>
                        <td>

                            <span style="color:#646464; font-weight:bold">
                                @item.CategoryName
                            </span>
                        </td>

                        <td>
                            <span style="display:block">@item.Description</span>

                        </td>
                        <td class="text-right">

                            <a class="btn btn-sm btn-default" href="~/catalogcategories/Input/@i">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>}

            </tbody>
        </table>
    </div>
    <div class="box-footer clearfix">
        
    </div>
</div>








