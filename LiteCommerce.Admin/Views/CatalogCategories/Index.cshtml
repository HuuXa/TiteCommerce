}
<div class="box box-primary">

    <!-- /.box-header -->
    <!-- form start -->

    <div class="box-body">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" placeholder="Searh...">
            <span class="input-group-btn">
                <button type="button" class="btn btn-info btn-flat">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
    <!-- /.box-body -->
</div>
<div class="container-fluid row" style="padding-bottom:10px">
    <div class="col-sm-8">
        there are <b>1,000</b>  Categories. Page 1/100
    </div>
    <div class="col-sm-4 text-right">
        <div class="btn-group">
            <a href="~/catalogcategories/Input" class="btn btn-sm btn-primary">Add Categories </a>
            <button type="button" class="btn btn-sm btn-danger">Delete Categories</button>

        </div>
    </div>
</div>
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered table-striped dataTable">
