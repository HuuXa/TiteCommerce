                    </th>
                    <th style="width:80px">

                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 3; i++)
                {
                    <tr>
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>@i</td>
                        <td>

                            <span style="color:#646464; font-weight:bold">
                                Beverages
                            </span>
                        </td>

                        <td>
                            <span style="display:block">Soft drinks, coffees, teas, beers, and ales</span>

                        </td>
                        <td class="text-right">

                            <a class="btn btn-sm btn-default" href="~/catalogcategories/Input/@i">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>}

            </tbody>
        </table>
    </div>
